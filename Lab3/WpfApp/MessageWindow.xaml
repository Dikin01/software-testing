<Window x:Class="WpfApp.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MessageWindow" Height="200" Width="500" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" IsCancel="True" HorizontalAlignment="Center" Width="100" Margin="10">OK</Button>
        <Label x:Name="MessageText" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Center">Hello</Label>
    </DockPanel>
</Window>
